<% include ./partials/header %>

<div class="container text-center">

<div class="col-sm-3"></div>

<div class="col-sm-6">

	<h2>Edit "<%= book.title %>"</h2>

		<form action='/books/<%= book._id %>?_method=PUT' method='POST'>
			<div class='form-group'> Title:
				<input type='text' name='title' required value="<%= book.title %>" class='form-control'/>
			</div>
			<div class='form-group'> Author:
				<input type='text' name='author' value="<%= book.author %>" class='form-control' />	
			</div>
			<div class='form-group'> Category:
				<input type='text' name='category' value="<%= book.category %>"  class='form-control' />	
			</div>	
			<div class='form-group'> Publisher:
				<input type='text' name='publisher' value="<%= book.publisher %>"  class='form-control' />	
			</div>
			<div class="form-group">
				<input type="submit" value="Submit Changes" class="btn btn-success btn-block"/>
			</div>		
		</form>
		<hr />
		<a href='/books'> Go Back </a>

	</div>

</div>

<% include ./partials/footer %>