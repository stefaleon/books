<% include ./partials/header %>

<div class="container text-center">

<div class="col-sm-3"></div>

<div class="col-sm-6">

	<h2>Add a Book</h2>

		<form action='/books' method='post'>
			<div class='form-group'>
				<input type='text' name='title' required placeholder="Title" class='form-control'/>
			</div>
			<div class='form-group'>
				<input type='text' name='author' placeholder="Author" class='form-control' />	
			</div>
			<div class='form-group'>
				<input type='text' name='category' placeholder="Category" class='form-control' />	
			</div>	
			<div class='form-group'>
				<input type='text' name='publisher' placeholder="Publisher" class='form-control' />	
			</div>
			<div class="form-group">
				<input type="submit" value="Add" class="btn btn-success btn-block"/>
			</div>		
		</form>
		<hr />
		<a href='/books'> Go Back </a>

	</div>

</div>

